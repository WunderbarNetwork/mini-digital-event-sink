{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "declaration": false,
    "lib": [
      "esnext"
    ],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "strictNullChecks": true,
    "target": "ESNext",
  },
  "exclude": [
    "dist/**/*",
    "node_modules"
  ],
  "include": ["./src/**/*.ts"],
  "ts-node": {
    "esm": true
  },
}
