{
  "name": "mini-digital-event-sink",
  "version": "1.0.0",
  "description": "Test endpoint for Mini Digital events",
  "private": false,
  "type": "module",
  "exports": "./src/local.ts",
  "scripts": {
    "postinstall": "test -f .env || cp .env.template .env",
    "dev": "nodemon src/local.ts",
    "start": "node local.js",
    "build": "rm -rf dist/ && tsc --build",
    "postbuild": "cp -R package.json yarn.lock dist/ && cp .env.template dist/.env && cd dist && yarn install --production",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-path .gitignore"
  },
  "dependencies": {
    "@wunderbar-network/mini-digital-sdk": "^1.3.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/lodash": "^4.14.195",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.4.4",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-vitest": "^0.2.6",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
